{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [],
  "timezone": "Asia/Tokyo",
  "prConcurrentLimit": 2,
  "prHourlyLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "terraform": {
    "ignorePaths":[
      "**/provider.tf"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["terraform-module"],
      "additionalBranchPrefix": "{{packageFileDir}}-",
      "commitMessageSuffix": "({{packageFileDir}})",
      "groupName": "terraform"
    }
  ]
}
